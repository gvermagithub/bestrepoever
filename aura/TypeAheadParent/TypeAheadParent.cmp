<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:handler name="cmpEvent" event="c:EventChildToParent" action="{!c.handleComponentEvent}"/>
    <aura:attribute name="PatientName" type="string" default=""/>
	<aura:attribute name="AccName" type="string" default=""/>
    <aura:attribute name="AccId" type="string" default=""/>
    <aura:attribute name="ConName" type="string" default=""/>
    <aura:attribute name="ConId" type="string" default=""/>
     <div class="slds-page-header">
            <div class="slds-media">
                <div class="slds-media__body">
                    <div class="slds-box slds-theme_shade">
                        <p> <h1>Ligtning Component with Internal Type Ahead</h1></p>
                    </div>
                    <lightning:input name="input1" aura:id="inputName" label="Enter Name:" placeholder = "type your name here.." value="{!v.PatientName}"/>
                    <c:TypeAhead fieldName="Account" sObjectName="Account"/>
                    <c:TypeAhead fieldName="Contact" sObjectName="Contact"/>
                </div>
         </div>
    </div>
</aura:component>